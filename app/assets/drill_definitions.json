    "drill_8": {
      "id": "drill_8",
      "name": "Drill 8: Circulation",
      "march_component": "C",
      "nodes": [
        {
          "id": "drill_8_start",
          "type": "instruction",
          "title": "CIRCULATION",
          "prompt": "Assess for signs of shock",
          "next": "drill_8_shock_checklist"
        },
        {
          "id": "drill_8_shock_checklist",
          "type": "multi_select",
          "title": "SHOCK ASSESSMENT",
          "prompt": "Check for shock signs (select all present):",
          "options": [
            "Pale, cold, clammy skin",
            "Weak or rapid pulse",
            "Altered consciousness",
            "Capillary refill >2 seconds",
            "Rapid shallow breathing",
            "Anxiety or confusion"
          ],
          "next": "drill_8_shock_check"
        },
        {
          "id": "drill_8_shock_check",
          "type": "decision",
          "title": "SHOCK PRESENT?",
          "prompt": "Based on assessment, are shock signs present?",
          "options": [
            {"label": "YES - Shock signs present", "next": "drill_8_manage"},
            {"label": "NO - No shock signs", "next": "drill_8_complete"}
          ]
        },
        {
          "id": "drill_8_manage",
          "type": "action",
          "title": "MANAGE SHOCK",
          "prompt": "Treat shock",
          "actions": [
            "Stop any ongoing bleeding",
            "Elevate legs (if no spinal injury)",
            "Keep casualty warm",
            "Reassure casualty",
            "Do NOT give food or drink"
          ],
          "next": "drill_8_complete"
        },
        {
          "id": "drill_8_complete",
          "type": "checkpoint",
          "title": "C - COMPLETE",
          "prompt": "Circulation assessment complete",
          "march_component": "C",
          "next": "drill_9_start"
        }
      ]
    },
    
